  <style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&family=Playfair+Display:wght@400;700&display=swap');

    :root {
      --primary-color: #000000; /* Black */
      --secondary-color: #d4af37; /* Gold */
      --accent-color: #ffffff; /* White */
      --text-color: #ffffff; /* White */
    }
    body {
      font-family: 'Roboto', sans-serif;
      background-color: var(--primary-color);
      color: var(--text-color);
      line-height: 1.6;
    }
    /* You can add more shared styles here as needed */
  </style>
</head>
<body>
  <div class="container">
    <%- body %>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" 
          integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" 
          crossorigin="anonymous" nonce="<%= nonce %>"></script>
</body>
</html>
